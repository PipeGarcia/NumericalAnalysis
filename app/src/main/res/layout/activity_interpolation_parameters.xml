<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pipe.numericalanalisys.InterpolationParameters">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Parameters"
        android:id="@+id/textView209"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the values of x:"
        android:id="@+id/textView210"
        android:textSize="@dimen/abc_floating_window_z"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView209"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ej: 3;-1;1;-2"
        android:ems="10"
        android:id="@+id/editText27"
        android:textSize="@dimen/abc_floating_window_z"
        android:layout_below="@+id/textView210"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText28"
        android:layout_alignEnd="@+id/editText28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the values of f(x):"
        android:id="@+id/textView211"
        android:textSize="@dimen/abc_floating_window_z"
        android:layout_below="@+id/editText27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ej: -2;3;1;5"
        android:ems="10"
        android:id="@+id/editText28"
        android:textSize="@dimen/abc_floating_window_z"
        android:layout_below="@+id/textView211"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView209"
        android:layout_alignEnd="@+id/textView209" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the point to interpolate:"
        android:id="@+id/textView212"
        android:textSize="@dimen/abc_floating_window_z"
        android:layout_below="@+id/editText28"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ej: 2"
        android:ems="10"
        android:id="@+id/editText29"
        android:textSize="@dimen/abc_floating_window_z"
        android:layout_below="@+id/textView212"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:id="@+id/button9"
        android:background="#f123b7"
        android:layout_below="@+id/editText29"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
</RelativeLayout>
