<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pipe.numericalanalisys.eqsystemsActivity"
    tools:showIn="@layout/activity_eqsystems">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaussian Elimination"
        android:id="@+id/b_gauss_elim"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#df0707" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cholesky"
        android:id="@+id/b_cholesky"
        android:layout_below="@+id/b_gauss_elim"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:background="#0208b8"
        android:layout_alignRight="@+id/b_gauss_elim"
        android:layout_alignEnd="@+id/b_gauss_elim" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doolittle"
        android:id="@+id/b_doolittle"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/b_cholesky"
        android:background="#f823e3"
        android:layout_alignRight="@+id/b_cholesky"
        android:layout_alignEnd="@+id/b_cholesky"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crout"
        android:id="@+id/b_crout"
        android:layout_alignBottom="@+id/b_gauss_elim"
        android:background="#de4d0a"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jacobi"
        android:id="@+id/b_jacobi"
        android:layout_above="@+id/b_doolittle"
        android:layout_alignLeft="@+id/b_crout"
        android:layout_alignStart="@+id/b_crout"
        android:elegantTextHeight="false"
        android:background="#e5f506"
        android:layout_alignRight="@+id/b_crout"
        android:layout_alignEnd="@+id/b_crout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gauss Seidel"
        android:id="@+id/b_seidel"
        android:layout_alignBottom="@+id/b_doolittle"
        android:layout_alignRight="@+id/b_jacobi"
        android:layout_alignEnd="@+id/b_jacobi"
        android:background="#13eac6"
        android:layout_alignLeft="@+id/b_jacobi"
        android:layout_alignStart="@+id/b_jacobi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MÃ©todos"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
