<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pipe.numericalanalisys.EquationSystemsParameters">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Parameters"
        android:id="@+id/textView182"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_alignWithParentIfMissing="false"
        android:elegantTextHeight="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the matrix A:"
        android:id="@+id/textView183"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:layout_marginTop="68dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView182"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText23"
        android:hint="Ej: 4 -2 1;-1 1 -3;10 3 1"
        android:layout_below="@+id/textView183"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView182"
        android:layout_alignEnd="@+id/textView182" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the vector B:"
        android:id="@+id/textView184"
        android:textSize="@dimen/abc_select_dialog_padding_start_material"
        android:textIsSelectable="false"
        android:layout_below="@+id/editText23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText24"
        android:hint="Ej: -3;4;0"
        android:layout_below="@+id/textView184"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText23"
        android:layout_alignEnd="@+id/editText23" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/button6"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/editText24"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
