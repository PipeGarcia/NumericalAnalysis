<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pipe.numericalanalisys.IterativeMethods">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Methods"
        android:id="@+id/textView186"
        android:textColor="#0b0a0a"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JACOBI"
        android:id="@+id/buttonJACOBI"
        android:layout_marginTop="89dp"
        android:background="#df0707"
        android:layout_below="@+id/textView186"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView186"
        android:layout_toStartOf="@+id/textView186" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAUSS SEIDEL"
        android:id="@+id/buttonGAUSSSEIDEL"
        android:background="#de4d0a"
        android:layout_alignBottom="@+id/buttonJACOBI"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView186"
        android:layout_toEndOf="@+id/textView186" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RICHARDSON"
        android:id="@+id/buttonRICHARDSON"
        android:layout_marginTop="134dp"
        android:background="#0208b8"
        android:layout_below="@+id/buttonJACOBI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonJACOBI"
        android:layout_alignEnd="@+id/buttonJACOBI" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S.O.R"
        android:id="@+id/buttonSOR"
        android:background="#f823e3"
        android:layout_alignBottom="@+id/buttonRICHARDSON"
        android:layout_alignRight="@+id/buttonGAUSSSEIDEL"
        android:layout_alignEnd="@+id/buttonGAUSSSEIDEL"
        android:layout_alignLeft="@+id/buttonGAUSSSEIDEL"
        android:layout_alignStart="@+id/buttonGAUSSSEIDEL" />
</RelativeLayout>
