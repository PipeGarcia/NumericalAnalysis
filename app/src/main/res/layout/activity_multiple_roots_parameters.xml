<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pipe.numericalanalisys.MultipleRootsParameters">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Parameters"
        android:id="@+id/textView79"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set f(x):"
        android:id="@+id/textView80"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_below="@+id/textView79"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFX"
        android:hint="Ej: x^2+3"
        android:layout_alignBottom="@+id/textView80"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set f&apos;(x):"
        android:id="@+id/textView81"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_below="@+id/textView80"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextF1X"
        android:hint="Ej: x^2+3"
        android:layout_below="@+id/editTextFX"
        android:layout_alignLeft="@+id/editTextFX"
        android:layout_alignStart="@+id/editTextFX" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set f&apos;&apos;(x):"
        android:id="@+id/textView82"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_below="@+id/editTextF1X"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextF2X"
        android:hint="Ej: x^2+3"
        android:layout_above="@+id/textView83"
        android:layout_alignLeft="@+id/editTextF1X"
        android:layout_alignStart="@+id/editTextF1X" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the initial x:"
        android:id="@+id/textView83"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_below="@+id/textView82"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextInitialX"
        android:hint="Ej: -3"
        android:inputType="numberSigned|numberDecimal"
        android:layout_alignBottom="@+id/textView83"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the tolerance:"
        android:id="@+id/textView84"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_below="@+id/textView83"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTolerance"
        android:hint="Ej: 0.02"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editTextInitialX"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the delta:"
        android:id="@+id/textView85"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_below="@+id/editTextTolerance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDelta"
        android:hint="Ej: 1"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/textView85"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set the number of iterations:"
        android:id="@+id/textView86"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_below="@+id/textView85"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextIterations"
        android:hint="Ej: 100"
        android:inputType="number"
        android:layout_alignBottom="@+id/textView86"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/buttonContinue"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:background="#29decc"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView86"
        android:layout_toRightOf="@+id/textView83"
        android:layout_toEndOf="@+id/textView83"
        android:layout_marginTop="43dp" />
</RelativeLayout>
