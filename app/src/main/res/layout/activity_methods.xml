<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Methods">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the method"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_dialog_padding_material" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView6"
        android:src="@drawable/imagen6"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bisection"
        android:id="@+id/bisectionButton"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/newtonRaphsonButton"
        android:background="#29decc"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_toLeftOf="@+id/newtonRaphsonButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="False Position"
        android:id="@+id/falsePositionButton"
        android:layout_alignTop="@+id/bisectionButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/multipleRootsButton"
        android:layout_alignStart="@+id/multipleRootsButton"
        android:background="#29decc"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_top_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fixed Point"
        android:id="@+id/fixedPointButton"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/bisectionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#29decc"
        android:layout_toStartOf="@+id/imageView6"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_alignRight="@+id/bisectionButton"
        android:layout_alignEnd="@+id/bisectionButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Newton-Raphson"
        android:id="@+id/newtonRaphsonButton"
        android:layout_alignTop="@+id/fixedPointButton"
        android:layout_alignRight="@+id/falsePositionButton"
        android:layout_alignEnd="@+id/falsePositionButton"
        android:background="#29decc"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_top_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secant"
        android:id="@+id/secantButton"
        android:layout_below="@+id/fixedPointButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/fixedPointButton"
        android:layout_alignEnd="@+id/fixedPointButton"
        android:background="#29decc"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_top_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiple Roots"
        android:id="@+id/multipleRootsButton"
        android:layout_alignBottom="@+id/secantButton"
        android:background="#29decc"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_top_material"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
