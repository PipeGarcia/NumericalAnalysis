<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pipe.numericalanalisys.interpolationActivity"
    tools:showIn="@layout/activity_interpolation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MÃ©todos"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0d0c0c"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Newton polynomial"
        android:id="@+id/b_newton_polynomial"
        android:layout_below="@+id/textView17"
        android:layout_toLeftOf="@+id/textView17"
        android:layout_toStartOf="@+id/textView17"
        android:layout_marginTop="89dp"
        android:background="#dbe615" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Spline"
        android:id="@+id/b_linear_spline"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/b_newton_polynomial"
        android:layout_alignEnd="@+id/b_newton_polynomial"
        android:background="#f60039" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lagrange Polynomial"
        android:id="@+id/b_lagrange_polynomial"
        android:layout_alignBottom="@+id/b_newton_polynomial"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:background="#17ef26" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cubic Spline"
        android:id="@+id/b_cubic_spline"
        android:layout_alignRight="@+id/b_lagrange_polynomial"
        android:layout_alignEnd="@+id/b_lagrange_polynomial"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_alignBottom="@+id/b_linear_spline"
        android:layout_alignTop="@+id/b_linear_spline"
        android:background="#1d158f" />
</RelativeLayout>
